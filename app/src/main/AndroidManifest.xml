<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Arahkampus"
        tools:targetApi="31">

        <!-- Launcher Activity -->
        <activity
            android:name=".ui.activity.BuildingFormActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Arahkampus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity untuk navigasi -->
        <activity
            android:name=".ui.activity.NavigationActivity"
            android:exported="false" />

        <!-- Activity untuk ringkasan -->
        <activity
            android:name=".ui.activity.SummaryActivity"
            android:exported="false" />

        <!-- Activity untuk Detail -->
        <activity
            android:name=".ui.activity.DetailActivity"
            android:exported="false" />

    </application>

</manifest>
